<div class="tabs">
    {{#tabs}}
        <input type="radio" name="tabs" id="tab_{{tab_id}}" {{#show_tab}}checked="checked"{{/show_tab}}>
        <label for="tab_{{tab_id}}">{{tab_name}}</label>
        <div class="tab">
            {{#articles}}
                {{>articleLazy}}
            {{/articles}}
            {{^articles}}
                <p>No articles for {{tab_name}} yet. Check back soon, we're probably updating right now!</p>
            {{/articles}}
        </div>
    {{/tabs}}
</div>