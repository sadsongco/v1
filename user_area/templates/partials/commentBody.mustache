<div class="commentContainer">
    <div class="commentHead">
        <div class="username">{{username}}</div>
        <div class="commentDate">{{comment_date}}</div>
    </div>
    <div class="commentBody">{{comment}}</div>
    <form id="replyToComment{{comment_id}}" hx-post="API/replyForm.php" hx-target="#commentReply_{{comment_id}}" hx-swap="outerHTML">
        <input type="hidden" name="replyTo_username" value="{{username}}" />
        <input type="hidden" name="replyTo_body" value="{{comment}}" />
        <input type="hidden" name="comment_id" value="{{comment_id}}" />
        <input type="hidden" name="article_id" value="{{article_id}}" />
        <input type="submit" value="Reply" />
    </form>
    <div class="commentReply" id="commentReply_{{comment_id}}"></div>
</div>
{{#replies}}
    <div class="replyContainer">
        {{>commentBody}}
    </div>
{{/replies}}