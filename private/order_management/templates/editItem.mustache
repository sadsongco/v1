<form hx-post="php/update_item.php" hx-target="#editItem_{{item_id}}" hx-swap="innerHTML">
    {{#items}}
        <div class="colForm orderLine">
            <label for="{{key}}_{{item_id}}">{{label}}</label>
            <input type="{{type}}" id="{{key}}_{{item_id}}" name="{{key}}" value="{{value}}">
        </div>
    {{/items}}
    <input type="submit" name="submit" value="update item">
    <input type="submit" name="submit" value="cancel">
</form>
<script>
    document.getElementById("editItem_{{item_id}}").scrollIntoView({behaviour: 'smooth', block: 'start'});
</script>